<div class="container">
  <% @user.each do |user| %>
    <ul>
      <div class="user-panel shadow p-3 mb-5 bg-white rounded" id=<%=user[:id]%>>
        <li class="profile-img">
          <h4>image<%=user[:pic]%></h4>
        </li>
        <div class="user-name">
          <li>
            <h3 class='shadow p-3  bg-white rounded'>
              <a href="/user/<%=user[:id]%>">
                <%=user[:name]%>
              </a>
            </h3>
          </li>
          <p>Number of posts: <%=user[:posts_counter]%></p>
        </div>
        <hr>
      </div>
    </ul>
  <% end %>
</div>
