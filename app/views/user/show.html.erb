<div class="container animate__animated animate__fadeIn">
  <h1>User page</h1>
  <div>
    <% @user %>
    <ul>
      <div class="user-panel shadow p-3 mb-5 user-tab-bg rounded animate__animated animate__fadeIn">
        <li class="profile-img">
          <img class="profile-img" src="<%= @user.photo %>">
        </li>
        <div class="user-name">
          <li>
            <h3 class="animate__animated animate__fadeIn">
              <a href="/user/<%=@user[:id]%>"><%= @user.name %></a>
            </h3>
          </li>
        </div>
        <div class="p animate__animated animate__fadeIn">
          <p>Number of posts: <%= @user.posts_counter %></p>
        </div>
      </div>
    </ul>
  </div>
  <div class="shadow p-3 user-tab-bg rounded my-5 animate__animated animate__fadeIn">
    <p>Bio:</p>
    <p><%=@user[:bio]%></p>
  </div>
</div>
<div class="container animate__animated animate__fadeIn">
  <h3 class="m-3">Posts:</h3>
  <%= render partial: 'posts/posts', locals: {posts: @posts} %>
</div>
