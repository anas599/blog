<section class="container animate__animated animate__fadeIn
">
  <h2 class="mb-5">Add a post</h2>
  <%= form_with(model: @post, url: new_post_path, local: true, class: "form") do |form| %>
    <div class="form-group field">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control mb-3" %>
    </div>
    <div class="form-group field">
      <%= form.label :text %>
      <%= form.text_area :text, class: "form-control mb-3" %>
    </div>
    <div class="form-group action">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</section>
