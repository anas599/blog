<section class="posts animate__animated animate__fadeIn
">
  <% user = User.find(params[:id]) %>
  <% user_posts = user.recent_posts %>
  <ul>
    <% user_posts.each do |post| %>
      <li>
        <div class="d-flex border border-dark  justify-content-between shadow p-3 mb-5 mt-5 user-tab-bg rounded">
          <div>
            <h3><a href="/user/<%=@user[:id]%>/posts/<%= post.id %>"> <%= post.title %></a></h3>
            <p><%= post.text %></p>
          </div>
          <div class="mt-auto align-self-end">
            <p>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
            <% if can? :destroy, post %>
              <%= link_to "Delete Post", destroy_post_path( id:post.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="text-center mb-5">
    <a href="/user/<%=@user[:id]%>/posts">
      <button type="button" class="btn btn-primary">See all posts</button>
    </a>
  </div>
</section>
