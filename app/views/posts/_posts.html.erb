<section class="posts">
  <% user = User.find(params[:id]) %>
  <% user_posts = user.recent_posts %>
  <ul class="post-body shadow p-3 mb-5 bg-white rounded">
    <% user_posts.each do |post| %>
      <li>
        <h3>
          <a href="/users/<%=@user[:id]%>/posts/<%= post.id %>"> <%= post.title %>
          </a>
        </h3>
        <p><%= post.text %></p>
      </li>
      <hr>
    <% end %>
  </ul>
  <a href="/users/<%=@user[:id]%>/posts">
    <button type="button" class="btn btn-secondary" >See all posts</button>
  </a>
</section>
